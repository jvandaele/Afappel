{% extends "base.html.twig" %}
{% block body %}

    <h1> Liste des classes </h1>

    <div class="row d-flex justify-content-center m-1">
        <a href="{{ path('admin.classes.create') }}" class="nav-link text-dark" style="font-size: 1.5rem;">
            Créer une classe
        </a>
    </div>
    <h2>Classes actuelles</h2>
    {% if classesActuelles is empty %}
        <strong>Aucune classe n'est définie comme étant actuelle pour le moment.</strong>
    {% else %}
        <table class="table">
            <thead class="table-dark">
            <td>Nom</td>
            <td>Année</td>
            <td>Promotion</td>
            <td>Groupes</td>
            <td>Opérations</td>
            </thead>
            <tbody>
            {% for classe in classesActuelles %}
                <tr class="bg-light">
                    <td>{{ classe.nomClasse }}</td>
                    <td>{{ classe.annee }}</td>
                    <td>{{ classe.promotion.nomPromotion }}</td>
                    <td>
                        {% for groupe in classe.groupes %}
                            {{ groupe.nomGroupe }}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('admin.classes.show',{'id': classe.id}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <h2>Toutes les clasess</h2>
    {% if classes is empty %}
        <strong>Il n'existe aucune autre classe pour le moment.</strong>
    {% else %}
        <table class="table">
            <thead class="table-dark">
            <td>Nom</td>
            <td>Année</td>
            <td>Promotion</td>
            <td>Groupes</td>
            <td>Opérations</td>
            </thead>
            <tbody>
            {% for classe in classes %}
                <tr class="bg-light">
                    <td>{{ classe.nomClasse }}</td>
                    <td>{{ classe.annee }}</td>
                    <td>{{ classe.promotion.nomPromotion }}</td>
                    <td>
                        {% for groupe in classe.groupes %}
                            {{ groupe.nomGroupe }}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('admin.classes.show',{'id': classe.id}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}