{% extends 'base.html.twig' %}

{% block body %}
    <h1> Changer de mot de passe </h1>

    <form method="post" action="{{ path("password.submit") }}" class="p-3 mb-2 bg-light" style="border-radius:5px;">
        {% if error is defined %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}
        <div class="d-flex flex-column m-1">
            <label for="nouveauMdp">Nouveau mot de passe</label>
            <input name="nouveauMdp" type="password" value="{{ nouveauMdp ?? ''}}" required>
        </div>
        <div class="d-flex flex-column m-1">
            <label for="confirmerNouveauMdp">Confirmer le nouveau mot de passe</label>
            <input name="confirmerNouveauMdp" type="password" value="{{ confirmerNouveauMdp ?? ''}}" required>
        </div>
        <div class="row d-flex justify-content-center m-3">
            <button type="submit" class="btn btn-success m-1">Changer le mot de passe</button>
        </div>
    </form>
{% endblock %}